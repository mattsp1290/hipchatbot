<h1>Listing hooks</h1>

<table>
  <thead>
    <tr>
      <th>Room</th>
      <th>Url</th>
      <th>Event</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hooks.each do |hook| %>
      <tr>
        <td><%= hook.room %></td>
        <td><%= hook.url %></td>
        <td><%= hook.event %></td>
        <td><%= link_to 'Show', hook %></td>
        <td><%= link_to 'Edit', edit_hook_path(hook) %></td>
        <td><%= link_to 'Destroy', hook, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Hook', new_hook_path %>
